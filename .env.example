# SchemaHub Configuration
# Copy this file to .env and fill in your values

# S3 bucket for storing raw Coinbase trades
# Can also be passed via --s3-bucket CLI argument (which takes precedence)
S3_BUCKET=my-schemahub-bucket

# Optional: AWS credentials (if not using AWS profiles)
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx
# AWS_DEFAULT_REGION=us-east-1

# Optional: Coinbase API credentials (if using the ingest command)
# COINBASE_API_KEY=xxx

# Health Check Configuration
# DynamoDB table for exchange health tracking
DYNAMODB_HEALTH_TABLE=schemahub-exchange-health

# Enable/disable circuit breaker (default: true)
CIRCUIT_BREAKER_ENABLED=true

# Enable/disable health check tracking (default: true)
HEALTH_CHECK_ENABLED=true

# AWS region for DynamoDB (default: us-east-1)
AWS_REGION=us-east-1
